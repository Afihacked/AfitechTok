<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Konten Scrollable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Input URL -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tempel_link_youtube_disini"
                android:backgroundTint="@color/colorOnSurface"
                android:textColor="@color/colorOnSurface"
                app:boxCornerRadiusBottomEnd="18dp"
                app:boxCornerRadiusBottomStart="18dp"
                app:boxCornerRadiusTopEnd="18dp"
                app:boxCornerRadiusTopStart="18dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextColor="@android:color/holo_red_dark">

                <TextView
                    android:id="@+id/textCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="2dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/count_text"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeErrorColor="@color/colorOutline"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:maxLines="1" />

                <!-- Pilih Format -->
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioMp4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/radio_mp4"
                        android:textSize="14sp"
                        android:checked="true"
                        app:buttonTint="@color/radio_selector"
                        android:textColor="@color/colorOnSurface" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioMp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/radio_mp3"
                        android:textSize="14sp"
                        android:textColor="@color/colorOnSurface"
                        app:buttonTint="@color/radio_selector"
                        android:layout_marginStart="16dp" />
                </RadioGroup>
            </com.google.android.material.textfield.TextInputLayout>



            <!-- Baris Tombol Download & YouTube -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPaste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/holo_red_dark">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iconPaste"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="paste_icon"
                        android:padding="8dp"
                        android:src="@drawable/ic_add"
                        android:tint="@android:color/white" />
                </com.google.android.material.card.MaterialCardView>


                <!-- Tombol Download -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDownload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/download"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/holo_red_dark"
                    app:cornerRadius="12dp"
                    app:iconGravity="textStart"
                    android:paddingVertical="12dp" />

                <!-- Spasi antar tombol -->
                <Space
                    android:layout_width="14dp"
                    android:layout_height="wrap_content" />

                <!-- Tombol YouTube -->
                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="18dp"
                    android:background="#00780000"
                    app:cardElevation="0dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btnOpenYoutube"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Youtube"
                        android:src="@drawable/ic_youtube2" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

<!--            Tutorial-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BAGAIMANA CARA UNDUH DARI YOUTUBE?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="50dp"
                    android:paddingBottom="16dp">

                    <!-- Gambar Tutorial 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="28dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1. Klik Ikon Youtube Untuk Salin Tautan Video."
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="left"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/step1_yt" />
                    </LinearLayout>

                    <!-- Gambar Tutorial 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="28dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2. Jika Aplikasi Tidak Menempel Tautan Otomatis Klik Tombol Tempel."
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="left"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/step2_yt" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="28dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3. Pilih Format yang Ingin Diunduh. Kemudian Klik Tombol Unduh Tunggu Proses Hingga Selesai."
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_gravity="left"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/step3_yt" />
                    </LinearLayout>

                    </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Frame untuk Iklan -->
    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- AdMob Banner -->
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-2025447201837747/8904457185" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
