<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="8dp">

        <!-- Kartu Pengaturan: Ads -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_settings"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <!-- Judul dan Switch dalam satu baris -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Matikan Iklan"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchAds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color" />
            </LinearLayout>

            <!-- Deskripsi -->
            <TextView
                android:id="@+id/tvAdsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jika diaktifkan, iklan akan dinonaktifkan selama penggunaan aplikasi."
                android:textSize="13sp"
                android:textColor="#666666" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
