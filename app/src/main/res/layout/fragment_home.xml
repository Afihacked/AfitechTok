<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <!-- ScrollView untuk konten utama -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adContainer"
        android:layout_alignParentTop="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <!-- Logo -->
            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/logo_afitech" />

            <!-- Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

            <!-- Deskripsi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_home"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <!-- Tombol-tombol -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tt_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_tiktok_downloader"
                android:layout_marginBottom="12dp"
                style="@style/Widget.Material3.Button"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_red_dark"
                app:cornerRadius="16dp"
                android:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_yt_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_youtube_downloader"
                android:layout_marginBottom="12dp"
                style="@style/Widget.Material3.Button"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_red_dark"
                app:cornerRadius="16dp"
                android:elevation="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_wa_story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_whatsapp_story"
                android:layout_marginBottom="12dp"
                style="@style/Widget.Material3.Button"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_red_dark"
                app:cornerRadius="16dp"
                android:elevation="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_riwayat_unduhan"
                style="@style/Widget.Material3.Button"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_red_dark"
                app:cornerRadius="16dp"
                android:elevation="4dp" />

            <!-- Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_versi_2_0_beta_dibuat_oleh_afitech"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginTop="32dp"
                android:alpha="0.6" />

        </LinearLayout>
    </ScrollView>

    <!-- Bagian bawah: switch dan iklan -->
    <LinearLayout
        android:id="@+id/adContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp">

        <!-- AdMob Banner -->
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-2025447201837747/8904457185" />
    </LinearLayout>
</RelativeLayout>
